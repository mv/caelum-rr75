
<div id="form">

    <%= form_for @carro, :url => {:action => 'create'} do |f| %>

      <strong>Quer vender ?</strong>
      <br/><br/>

      <%= f.label :nome %><br/>
      <%= f.text_area :nome, :class => 'button-input', :cols => 40, :rows => 1 %>
      <br/>

      <%= f.label :descricao %><br/>
      <%= f.text_area :descricao, :cols => 40, :rows => 3 %>
      <br/>

      <%= f.label :preco %><br/>
      <%= f.text_field :preco, :class => 'button-input' %>
      <br/><br/>

      <%= f.submit "Anunciar!", :disable_with => '...' , :class => 'anunciar' %>
      <br/>

    <% end -%>

</div>

<div style="clear:both"> </div>

<div id="busca">
  <strong>Carros `a venda</strong>
  <br/>

  <% if !@carros.blank? %>

    <% for carro in @carros %>
      <br/>
          <%= carro.nome %>
          <%= carro.descricao %>
          R$<%= carro.preco %>
      <br/>
    <% end %>

  <% else-%>

    <p>Nenhum carro cadastrado.</p>

  <% end %>

</div>

